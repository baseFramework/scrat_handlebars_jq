<div class="conf">
    <a href="javascript:void(0);" class="btn btn-info conf-add"><i class="fa fa-plus"></i> 添加</a>
    <a href="javascript:void(0);" class="btn btn-info conf-refresh"><i class="fa fa-refresh"> 刷新</i></a>
    <a href="javascript:void(0);" class="btn btn-info conf-apply" data-id="{{envId}}"><i class="fa fa-gear"></i> 应用</a>

    <form action="" class="smart-form kv" id="conf-KV-env-{{envId}}">
        <div class="row">
            <section class="col col-4 key">
                <label class="input">
                    <h2>Key</h2>
                </label>
            </section>
            <section class="col col-4 value">
                <label class="input">
                    <h2>Value</h2>
                </label>
            </section>
        </div>
        {{#each key_value}}
            <div class="row key-value">
                <section class="col col-4 key">
                    <label class="input">
                        <input type="text" name="key" value="{{k}}">
                    </label>
                </section>
                <section class="col col-4 value">
                    <label class="input">
                        <input type="text" name="value" value="{{v}}">
                    </label>
                </section>
                <i class="fa fa-trash-o fa-lg"></i>
                <i class="fa fa-save"></i>
            </div>
        {{/each}}
    </form>
</div>