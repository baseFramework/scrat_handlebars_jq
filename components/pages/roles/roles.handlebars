<div class="page-header">
    <h1>项目小伙伴</h1>
</div>
<div class="jumbotron">
    <div class="row">
    {{#if memberlist}}
        {{#each memberlist}}
            <div class="col-sm-4 col-md-2">
                <div class="thumbnail">
                    <img src={{logo}} alt={{roleName}}>
                    <div class="caption">
                        <h2>{{userName}}</h2>
                        <p class="role-tip">{{roleName}}</p>
                        <p><a href="javascript:void(0);" data-name={{userName}} data-role={{roleName}} class="btn btn-primary role-remove" role="button">移除</a></p>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}

    {{/if}}
    </div>

</div>
<div class="page-header">
    <h1>小伙伴管理</h1>
</div>
<ol class="breadcrumb">
    <li>
        <div>添加</div>
    </li>
</ol>
<div class="input-group role-wrap-input">
    <!--<input type="text" class="form-control" placeholder="名称">-->
    <select id="userSwiter" class="userSelect chosen-select" data-placeholder="名称" data-live-search="true" data-style="btn-default">
        {{#each userlists}}
            <option value="{{id}}" {{#if selected}}selected{{/if}}>{{userName}}</option>
        {{/each}}
    </select>
    <select id="roleSwiter" class="roleSelect chosen-select" data-placeholder="角色" data-style="btn-default">
        {{#each rolelist}}
            <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
        {{/each}}
    </select>
    <button id="role-add" class="btn btn-primary btn-sm btn-envi-reload pull-right">
        <i class="fa fa-lg fa-fw fa-plus-circle"></i>邀请
    </button>
</div>

<div class="page-header">
    <h1>权限说明</h1>
</div>
<table class="table table-hover">
    <thead>
    <tr>
        <th data-field="name">Name</th>
        <th data-field="read">Read ( 读取 )</th>
        <th data-field="write">Write ( 修改 )</th>
        <th data-field="setting">Setting ( 设置 )</th>
    </tr>
    </thead>
    <tbody>
    <tr id="tr_id_1" class="tr-class-1">
        <td id="td_id_1" class="td-class-1">Owner</td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-check"></i></td>
    </tr>
    <tr id="tr_id_2" class="tr-class-2">
        <td id="td_id_2" class="td-class-2">Master</td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-check"></i></td>
    </tr>
    <tr id="tr_id_3" class="tr-class-3">
        <td id="td_id_3" class="td-class-3">Developer</td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-times"></i></td>
    </tr>
    <tr id="tr_id_1" class="tr-class-1">
        <td id="td_id_1" class="td-class-1">Operator</td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-times"></i></td>
    </tr>
    <tr id="tr_id_2" class="tr-class-2">
        <td id="td_id_2" class="td-class-2">Reporter</td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-times"></i></td>
        <td><i class="fa fa-times"></i></td>
    </tr>
    <tr id="tr_id_3" class="tr-class-3">
        <td id="td_id_3" class="td-class-3">Guest</td>
        <td><i class="fa fa-check"></i></td>
        <td><i class="fa fa-times"></i></td>
        <td><i class="fa fa-times"></i></td>
    </tr>
    </tbody>
</table>
